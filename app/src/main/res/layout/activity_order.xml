<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offWhite"
    tools:context=".orderPack.OrderActivity"
    >
    <TextView
        android:id="@+id/textViewOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:text="BUILD YOUR ORDER"
        android:layout_marginLeft="0dp"
        android:textAlignment="center"
        android:textColor="@color/offWhite"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonAddToCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Add"
        android:backgroundTint="@color/colorPrimary"
        android:textSize="20sp"
        android:textColor="@color/offWhite"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="135dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textViewQuantity"
        android:text="Quantity:"
        android:textColor="@color/forestgreen"
        android:textSize="20sp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="204dp"
        android:layout_marginLeft="10dp"
        android:layout_height="38dp"
        android:layout_below="@+id/textViewOrder"
        android:text="Medicine Name:"
        android:textColor="@color/forestgreen"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextMedicine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:ems="10"
        android:layout_marginLeft="10dp"
        android:inputType="textPersonName"
        android:hint="e.g: Napa" />

    <Button
        android:id="@+id/buttonDecrese"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:text="-"
        android:background="@drawable/round"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonIncrease"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:text="+"
        android:textSize="30sp"
        android:background="@drawable/round"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp" />

    <TextView
        android:id="@+id/textViewQuantity"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="225dp"
        android:layout_marginTop="145dp"
        android:text="1"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        />

    <ImageView
        android:id="@+id/camera"
        android:layout_width="101dp"
        android:layout_height="79dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/buttonDecrese"
        android:layout_marginTop="200dp"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:layout_alignLeft="@+id/buttonDecrese" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="141dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="215dp"
        android:text="Take a Image:"
        android:textColor="@color/forestgreen"
        android:textSize="20sp" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView9"
        android:layout_marginRight="144dp"
        android:visibility="gone"
        android:layout_alignParentRight="true" />


</RelativeLayout>